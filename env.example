# =============================================================================
# AI Trading Team - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Configuration (Required)
# -----------------------------------------------------------------------------
# Using MiniMax as Anthropic-compatible API provider
# Model: MiniMax-M2.1
ANTHROPIC_BASE_URL=https://api.minimax.io/anthropic
ANTHROPIC_API_KEY=your_minimax_api_key_here

# -----------------------------------------------------------------------------
# Binance API (Required for Binance live trading)
# -----------------------------------------------------------------------------
# Public market data (klines, ticker, orderbook) works without authentication
# Private endpoints (account, orders) require API keys
# Required if TRADING_EXCHANGE=binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# -----------------------------------------------------------------------------
# WEEX Exchange API (Required for live trading)
# -----------------------------------------------------------------------------
# Get your API credentials from WEEX exchange
# Required for order execution and position management
WEEX_API_KEY=your_weex_api_key
WEEX_API_SECRET=your_weex_api_secret
WEEX_PASSPHRASE=your_weex_passphrase

# -----------------------------------------------------------------------------
# Trading Parameters
# -----------------------------------------------------------------------------

# Trading symbol (auto-converts to exchange formats)
# Example: DOGEUSDT -> Binance: DOGEUSDT, WEEX: cmt_dogeusdt
TRADING_SYMBOL=DOGEUSDT

# Trading exchange (weex or binance)
TRADING_EXCHANGE=weex

# Leverage multiplier (default: 20x)
TRADING_LEVERAGE=20

# Maximum position size as percentage of available balance (default: 75%)
# Example: If available balance is 1000 USDT, max position margin = 750 USDT
TRADING_MAX_POSITION_PERCENT=75

# -----------------------------------------------------------------------------
# Prompt Style (Trading Strategy Bias)
# -----------------------------------------------------------------------------
# Controls the AI agent's trading strategy bias
# Options:
#   - neutral: No directional bias, purely technical analysis (default)
#   - long: Bullish bias (70% long, 30% short), optimized for bull markets
#   - short: Bearish bias (70% short, 30% long), optimized for bear markets
PROMPT_STYLE=neutral

# -----------------------------------------------------------------------------
# Telegram Notifications (Optional)
# -----------------------------------------------------------------------------
# Telegram bot token and chat ID for trade notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# Label shown in notifications (e.g., account name)
TELEGRAM_ACCOUNT_LABEL=

# -----------------------------------------------------------------------------
# Dry Run Mode
# -----------------------------------------------------------------------------
# Set to true to simulate trades without real execution
# All logic runs normally, but orders are not sent to exchange
# Useful for testing and development
DRY_RUN=false
